@model IEnumerable<SemAPI.Models.DijakPodročje>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>


<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr class="table-primary">
        <th class="table-primary">
            @Html.DisplayNameFor(model => model.DijPodTest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dijak.DijIme)
        </th>
        <th class="table-primary">
            @Html.DisplayNameFor(model => model.Področja.PodIme)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DijPodTest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dijak.DijIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Področja.PodIme)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>