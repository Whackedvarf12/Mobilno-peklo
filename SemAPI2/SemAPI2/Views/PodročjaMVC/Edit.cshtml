@model SemAPI2.Models.Področja

@{
    ViewBag.Title = "Edit";
}

<h2>Spremeni</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Predmet</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PodID)

        <div class="form-group">
            @*@Html.LabelFor(model => model.PodIme, htmlAttributes: new { @class = "control-label col-md-2" })*@Predmet
            <div class="col-md-10">
                @Html.EditorFor(model => model.PodIme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PodIme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Shrani" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazaj", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
